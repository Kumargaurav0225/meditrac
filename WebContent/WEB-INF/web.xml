<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>MediTrac</display-name>
  
  <error-page>
    <error-code>500</error-code>
    <location>/error?type=APP_ERROR</location>
  </error-page>
  <servlet>
    <servlet-name>Initializr</servlet-name>
    <servlet-class>proj.meditrac.boot.Initializr</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>IndexController</servlet-name>
    <servlet-class>proj.meditrac.web.controllers.IndexController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AccountsController</servlet-name>
    <servlet-class>proj.meditrac.web.controllers.AccountsController</servlet-class>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>AccountsController</servlet-name>
    <url-pattern>/AccountsController</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>AdminController</servlet-name>
  	<servlet-class>proj.meditrac.web.controllers.AdminController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AdminController</servlet-name>
  	<url-pattern>/dashboard/admin</url-pattern>
  </servlet-mapping>
</web-app>